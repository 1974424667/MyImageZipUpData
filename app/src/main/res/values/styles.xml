<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="login_editText">
        <item name="android:color">@color/allWhite</item>
        <item name="android:textColor">@color/allWhite</item>
        <item name="android:background">@null</item>
        <item name="android:drawableBottom">@drawable/login_edittext_bottom</item>
        <item name="android:textCursorDrawable">@drawable/editext_cursor</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColorHint">@color/text_white</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>
