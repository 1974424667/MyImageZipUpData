<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include layout="@layout/activity_base" />

    <ImageView
        android:id="@+id/bind"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@mipmap/bind" />

    <RelativeLayout
        android:id="@+id/relativeLayout14"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="250dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="right"
            android:text="旧  密  码:" />

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/textView1"
            android:layout_toRightOf="@+id/textView1"
            android:background="@drawable/password_ed_shape"
            android:hint="最多输入16位"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="5dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/amendButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/patrol_btn_shape"
        android:text="提交"
        android:textColor="#fff" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/amendButton"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/patrol_btn_shape"
        android:text="返回"
        android:textColor="#fff" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/relativeLayout14"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView31"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="right"
            android:text="新  密  码:" />

        <EditText
            android:id="@+id/newPassWord"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/textView31"
            android:layout_toRightOf="@+id/textView31"
            android:background="@drawable/password_ed_shape"
            android:hint="最多输入16位"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="5dp"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView34"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:gravity="right"
            android:text="确认密码:" />

        <EditText
            android:id="@+id/againNewPassWord"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_toEndOf="@+id/textView34"
            android:layout_toRightOf="@+id/textView34"
            android:background="@drawable/password_ed_shape"
            android:hint="最多输入16位"
            android:inputType="textPassword"
            android:maxLength="16"
            android:padding="5dp"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
