<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include layout="@layout/activity_base" />

    <EditText
        android:id="@+id/id"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_alignTop="@+id/address"
        android:background="@drawable/password_ed_shape"
        android:hint="设备id"
        android:inputType="number"
        android:padding="5dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_marginTop="94dp"
        android:background="@drawable/password_ed_shape"
        android:hint="填写地址"
        android:padding="5dp" />

    <EditText
        android:id="@+id/ed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/address"
        android:layout_alignLeft="@+id/id"
        android:layout_alignRight="@+id/address"
        android:layout_alignStart="@+id/id"
        android:layout_below="@+id/id"
        android:layout_marginTop="30dp"
        android:background="@drawable/password_ed_shape"
        android:gravity="center_vertical"
        android:hint="请输入提交地址"
        android:paddingLeft="5dp"
        android:textColor="#000"
        android:textSize="18sp" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ed"
        android:layout_margin="20dp"
        android:layout_marginTop="38dp"
        android:background="@drawable/password_ed_shape"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="图片存储地址:"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:textColor="#000"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/photograph"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/id"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignRight="@+id/id"
        android:layout_alignStart="@+id/linearLayout2"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginTop="42dp"
        android:background="@drawable/patrol_btn_shape"
        android:text="拍       照"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/subBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/photograph"
        android:layout_alignBottom="@+id/photograph"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_alignRight="@+id/linearLayout2"
        android:background="@drawable/patrol_btn_shape"
        android:text="提       交"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>
