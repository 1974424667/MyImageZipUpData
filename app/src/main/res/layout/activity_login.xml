<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yl.myimageupdata.widget.FullScreenVideoView
        android:id="@+id/login_video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true" />

    <ImageView
        android:id="@+id/login_iv_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login_video_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#42ffffff">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:padding="24dp">

            <Button
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="80dp"
                android:src="@mipmap/ic_launcher"
                android:text="点我试试"
                android:textColor="#000" />

            <EditText
                android:id="@+id/login_et_username"
                style="@style/login_editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_textview_high"
                android:text="admin" />

            <EditText
                android:id="@+id/login_et_password"
                style="@style/login_editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_textview_high"
                android:hint="@string/Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/login_bt_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_high"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/login_button_bg"
                android:gravity="center"
                android:text="@string/login"
                android:textColor="@color/allWhite"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
